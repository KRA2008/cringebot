<?xml version="1.0" encoding="utf-8" ?>
<fresh:FreshBaseContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:fresh="clr-namespace:FreshMvvm;assembly=FreshMvvm"
             xmlns:local="clr-namespace:Cringebot"
             xmlns:ce="clr-namespace:Cringebot.Page.CustomElements"
             xmlns:vc="clr-namespace:Cringebot.Page"
             xmlns:corcav="clr-namespace:Corcav.Behaviors;assembly=Corcav.Behaviors"
             d:DataContext="{d:DesignInstance Type=local:MainPageModel, IsDesignTimeCreatable=False}"
             x:Class="Cringebot.Page.MainPage"
             Title="Cringebot">
    <ContentPage.Content>
        <StackLayout Padding="15" 
                     Spacing="15">
            <Entry Placeholder="Search/Add Memory..."
                   Text="{Binding MemoryInput}">
                <corcav:Interaction.Behaviors>
                    <corcav:BehaviorCollection>
                        <corcav:EventToCommand EventName="Completed" 
                                               Command="{Binding AddMemoryCommand}"/>
                    </corcav:BehaviorCollection>
                </corcav:Interaction.Behaviors>
            </Entry>
            <Label Text="List hidden for your comfort."
                   IsVisible="{Binding ShowList, Converter={vc:NotConverter}}"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="FillAndExpand"/>
            <ce:DeselectListView ItemsSource="{Binding Memories}"
                      IsVisible="{Binding ShowList}"
                      VerticalOptions="FillAndExpand"
                      x:Name="MemoryList">
                <corcav:Interaction.Behaviors>
                    <corcav:BehaviorCollection>
                        <corcav:EventToCommand EventName="ItemTapped"
                                           Command="{Binding ViewDetailsCommand}"
                                           PassEventArgument="True"/>
                    </corcav:BehaviorCollection>
                </corcav:Interaction.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Description}"
                                           HorizontalOptions="StartAndExpand"
                                           VerticalTextAlignment="Center"/>
                                    <Label Text="{Binding Occurrences.Count}"
                                           VerticalTextAlignment="Center"/>
                                    <Image Source="add">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer>
                                                <corcav:Interaction.Behaviors>
                                                    <corcav:BehaviorCollection>
                                                        <corcav:EventToCommand EventName="Tapped"
                                                                               Command="{Binding Source={x:Reference MemoryList}, Path=BindingContext.AddOccurrenceCommand}"
                                                                               CommandParameter="{Binding}"/>
                                                    </corcav:BehaviorCollection>
                                                </corcav:Interaction.Behaviors>
                                            </TapGestureRecognizer>
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ce:DeselectListView>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand">
                <Label Text="Show List"
                       VerticalTextAlignment="Center"/>
                <Switch IsToggled="{Binding ShowList}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand">
                <Label Text="Simulate Intrusive Memory"
                       VerticalTextAlignment="Center"/>
                <Switch IsToggled="{Binding Simulate}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</fresh:FreshBaseContentPage>